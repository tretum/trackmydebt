<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.mmutert.trackmydebt.ui.transaction.AddTransactionViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.transaction.AddTransactionFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/sp_transaction_cause_selector" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_reason_short_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/til_value_input"
                app:layout_constraintTop_toBottomOf="@id/sp_transaction_cause_selector"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_reason_short_input"
                    android:hint="Reason (short, optional)"
                    android:inputType="text"
                    android:paddingStart="@dimen/text_input_pad_horizontal"
                    android:paddingLeft="@dimen/text_input_pad_horizontal"
                    android:paddingRight="@dimen/text_input_pad_horizontal"
                    android:paddingTop="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_value_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toEndOf="@id/til_reason_short_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/til_reason_short_input"
                app:layout_constraintBottom_toBottomOf="@id/til_reason_short_input"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                android:layout_marginStart="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_value_input"
                    android:hint="Value"
                    android:inputType="numberDecimal"
                    android:paddingStart="@dimen/text_input_pad_horizontal"
                    android:paddingLeft="@dimen/text_input_pad_horizontal"
                    android:paddingRight="@dimen/text_input_pad_horizontal"
                    android:paddingTop="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_calendar_today_24px"
                android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_reason_short_input"
                android:layout_marginTop="16dp"
                android:padding="8dp" />

            <TextView
                tools:text="2020-09-01"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/tv_date_selection"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="16dp"
                android:padding="8dp" />

            <Spinner
                android:id="@+id/sp_select_person"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_date_selection"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_reason_long_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sp_select_person"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    android:id="@+id/et_reason_long_input"
                    android:hint="Reason (long, optional)"
                    android:inputType="textMultiLine"
                    android:paddingStart="@dimen/text_input_pad_horizontal"
                    android:paddingLeft="@dimen/text_input_pad_horizontal"
                    android:paddingRight="@dimen/text_input_pad_horizontal"
                    android:paddingTop="12dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/floatingActionButton"
            android:icon="@drawable/ic_done_24px"
            android:text="Save"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>