<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.mmutert.trackmydebt.ui.recentactivity.RecentActivityViewModel" />

        <variable
            name="transaction"
            type="com.mmutert.trackmydebt.data.Transaction" />

        <variable
            name="person"
            type="com.mmutert.trackmydebt.data.Person" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/recent_activity_card"
        style="@style/Card"
        app:strokeWidth="1dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <include
                layout="@layout/tv_transaction_time"
                app:layout_constraintTop_toTopOf="@+id/tv_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_include"
                app:layout_constraintBottom_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_name"
                android:text="@{person.name}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="16sp"
                android:textAppearance="?attr/textAppearanceListItem"
                app:layout_constraintStart_toEndOf="@id/time_include"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/amount_include"
                app:layout_constraintHorizontal_bias="0.0"
                tools:text="John Doe" />

            <include
                layout="@layout/tv_transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/amount_include" />

            <TextView
                android:id="@+id/tv_transaction_reason"
                android:text="@{transaction.reason}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:visibility="@{transaction.reason.trim().empty ? View.GONE : View.VISIBLE}"
                app:layout_constraintTop_toBottomOf="@+id/time_include"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Shopping"
                app:layout_constraintEnd_toStartOf="@+id/amount_include" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
